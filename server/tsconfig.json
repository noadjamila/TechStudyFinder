{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "client"
  ]
}