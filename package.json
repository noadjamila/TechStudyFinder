{
  "name": "tech-study-finder",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm start --workspace server\" \"npm start --workspace client\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "build": "npm run build --workspace server && npm run build --workspace client",
    "test": "npm test --workspaces",
    "test:integration": "npm run test:integration --workspace server"
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "postcss": "^8.4.38"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/node": "^24.10.1",
    "concurrently": "^8.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "server/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "client/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
