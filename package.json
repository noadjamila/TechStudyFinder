{
  "name": "tech-study-finder",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm start --workspace server\" \"npm start --workspace client\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "npx husky install",
    "build": "npm run build --workspace server && npm run build --workspace client"
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "postcss": "^8.4.38",
    "webpack-dev-server": "4.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^8.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "server/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "client/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "react-scripts": "^0.0.0"
  }
}
