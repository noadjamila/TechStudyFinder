{
  "name": "my-fullstack-app",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm start --workspace server\" \"npm start --workspace client\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "server/**/*.{js,ts,jsx,tsx}": ["eslint --fix", "prettier --write", "git add"],
    "client/**/*.{js,ts,jsx,tsx}": ["eslint --fix", "prettier --write", "git add"]
    }
}
